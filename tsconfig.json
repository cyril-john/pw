{
    "compilerOptions": {
      "target": "ES2020",                          // Specifies the ECMAScript target version.
      "module": "CommonJS",                     // Specifies the module system (e.g., "commonjs", "esnext").
      "strict": true,                           // Enables all strict type-checking options.
      "outDir": "./dist",                       // Redirects output structure to the "dist" directory.
      "rootDir": "./src",                       // Specifies the root directory of input files.
      "esModuleInterop": true,                  // Enables interop between CommonJS and ES modules.
      "forceConsistentCasingInFileNames": true, // Disallows inconsistently-cased references to the same file.
      "skipLibCheck": true                      // Skips type checking of declaration files.
    },
    "include": ["src/**/*"],                    // Specifies which files to include in the compilation.
    "exclude": ["node_modules", "**/*.spec.ts"] // Specifies files to exclude from the compilation.
  }
  